{
    "manifest_version": 3,
    "name": "Demo chrome extension",
    "description": "A demonstration of a bespoke chrome extension being used to populate form fields",
    "version": "1.0",
    "action": {
        "default_title": "Click here!",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://google.com/"
            ],
            "js": [
                "popup.js"
            ]
        }
    ],
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ]
}